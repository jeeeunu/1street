<!DOCTYPE html>
<html lang="ko">
<!-- include : head -->
<%- include('includes/head') %>

  <body>
    <!-- include : top-button -->
    <%- include('includes/top-button') %>

      <!-- include : preloder -->
      <%- include('includes/preloder') %>

        <!-- include : header -->
        <%- include('includes/header') %>

          <!-- include : hero-normal -->
          <%- include('includes/hero') %>

            <!-- 내정보 (일반) -->
            <main class="mypage container mypage-info">
              <h2 class="title">마이페이지</h2>
              <div class="row">
                <aside class="col-lg-3">
                  <div class="proflie-info-container">
                    <div class="primary-img-wrap">
                      <img src="<%- user.profile_image %> " alt="" />
                    </div>
                    <div class="text-wrap">
                      <div class="name-wrap">
                        <span><%- authUser.user_name %> 님</span>
                        <a href="/my-page-user-edit"> >내 정보 수정</a>
                      </div>
                      <div>
                        <span>충전금액: </span>
                        <span><%- user.point %>원</span>
                      </div>
                      <div>
                        <span>포인트: </span>
                        <span><%- user.point %>원</span>
                      </div>
                      <div>
                        <span>잔여 쿠폰: </span>
                        <span>2개</span>
                      </div>
                    </div>
                    <hr />
                    <div class="provider-text">
                      <% if (user.provider==="google" ) { %>
                        <img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png"
                          style="width: 15px; height: 15px; margin-right: 7px" alt="" />구글 로그인 <% } %>
                    </div>
                    <button type="button" class="gray-text btn-user-delete" onclick="deleteUser()">
                      회원 탈퇴
                    </button>
                  </div>
                </aside>

                <section class="col-lg-9">


                  <section class="list-container">
                    <div class="title-wrap">
                      <h4>주문 상세 내역
                        <a id="order-count"> </a>
                      </h4>
                    </div>

                    <div class="order-list-table">
                      <p></p>

                      <ul>
                        <% order.order_details.forEach((orderDetail)=> { %>
                          <li class="tr">
                            <div class="td">
                              <p>상품명: <%= orderDetail.product.product_name %>
                              </p>
                              <div class="td">
                                <div class="order-info-wrap">
                                  <div class="img-wrap">
                                    <img src="<%= orderDetail.product.product_image[0].url %>" alt="" />
                                  </div>
                                  <div class="text-wrap">
                                    <div>
                                      <span>
                                        <small>가격:</small>
                                        <%= orderDetail.product.product_price %> 원
                                      </span>
                                      <span>
                                        <small>갯수:</small>
                                        <%= orderDetail.order_quantity %>
                                      </span>
                                    </div>
                                  </div>
                                </div>
                                <hr />
                              </div>
                            </div>
                          </li>
                          <% }); %>
                      </ul>
                      <p></p>
                      <div>
                        <span>
                          주문 날짜: <%= order.created_at.toISOString().substr(0, 10) %>
                        </span>
                      </div>
                      <div>
                        <span>
                          수령인: <%- order.order_receiver %>
                        </span>
                      </div>
                      <div>
                        <span>
                          전화번호: <%- order.order_phone %>
                        </span>
                      </div>
                      <div>
                        <span>
                          이메일: <%- order.order_email %>
                        </span>
                      </div>
                      <div>
                        <span>
                          배송지: <%- order.order_address %>
                        </span>
                      </div>
                      <p>
                        <hr />
                      </p>
                      <div>
                        <span>총 결제 금액: <%- order.order_payment_amount %> 원</span>
                      </div>
                    </div>
                  </section>
                </section>
            </main>

            <!-- include : footer -->
            <%- include('includes/footer') %>

              <script>

              </script>
  </body>

</html>