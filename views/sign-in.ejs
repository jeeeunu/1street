<!DOCTYPE html>
<html lang="ko">
  <!-- include : head -->
  <%- include('includes/head') %>
  <!-- script : sign-in -->
  <script>
    const login = async function () {
      try {
        const requestData = {
          email: document.querySelector('#emailInput').value,
          password: document.querySelector('#passwordInput').value,
        };
        const response = await fetch('/auth/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(requestData),
        });
        const data = await response.json();
        const errorMessageArray = data.message;
        const errorDiv = document.querySelector('.error-message-div');
        let newHtml = '';
        if (Array.isArray(errorMessageArray)) {
          errorMessageArray.forEach((errorMessage) => {
            if (Array.isArray(errorMessage.messages)) {
              const messagesHtml = errorMessage.messages
                .map((message) => `<p class="error-text">${message}</p>`)
                .join('');
              newHtml += `<div class="error-message">${messagesHtml}</div>`;
            } else {
              newHtml += `<div class="error-message">${errorMessage.messages}</div>`;
            }
          });
        } else if (typeof errorMessageArray === 'string') {
          newHtml = `<div class="error-message">${errorMessageArray}</div>`;
        }
        errorDiv.innerHTML = newHtml;
        if (response.ok) {
          alert('로그인 되었습니다');
          window.location.href = '/';
        }
      } catch (error) {
        alert(error);
      }
    };
  </script>

  <body>
    <!-- include : preloder -->
    <%- include('includes/preloder') %>

    <!-- include : header -->
    <%- include('includes/header') %>

    <!-- sign-form -->
    <main class="hero container sign-form">
      <form>
        <legend class="tit-page">이메일 로그인</legend>
        <div class="content-wrap">
          <div class="user-box">
            <input type="text" id="emailInput" name="" required />
            <label>Email</label>
          </div>
          <div class="user-box">
            <input type="password" id="passwordInput" name="" required />
            <label>Password</label>
          </div>
          <!-- PUB :: 에러메세지 -->
          <div class="error-message-div"></div>
          <button
            type="button"
            class="btn-primary-m btn-sign-in"
            onclick="login()"
          >
            로그인
          </button>
          <div class="sign-link-area">
            <!-- <a href="">아이디,비밀번호찾기</a> -->
            <a href="sign-up.html">이메일로 회원가입</a>
            <span class="gray-text">|</span>
            <a href="sign-up.html">판매자 로그인</a>
          </div>
        </div>
        <hr />
        <div class="content-wrap">
          <ul class="list-link website">
            <li class="item">
              <button type="button" class="btn-primary-m link-google">
                구글 로그인/회원가입
              </button>
            </li>
          </ul>
        </div>
      </form>
    </main>

    <!-- include : footer -->
    <%- include('includes/footer') %>
  </body>
</html>
