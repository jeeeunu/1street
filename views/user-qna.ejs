<!DOCTYPE html>
<html lang="ko">
  <!-- include : head -->
  <%- include('includes/head') %>
  <body>
    <!-- include : preloder -->
    <%- include('includes/preloder') %>

    <!-- include : header -->
    <%- include('includes/header') %>

    <!-- Contact Page Section Begin -->
    <section class="contact-page spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="contact__text">
              <h2>문의하기</h2>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4">
            <div class="contact__widget">
              <div class="contact__widget__title">
                <h5>상품 이미지</h5>
              </div>
              <img src="/img/product/product-image.jpg" alt="Product Image" />
            </div>
          </div>
          <div class="col-lg-8">
            <div class="contact__form">
              <form action="#">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <label for="productName">상품 이름</label>
                      <input
                        type="text"
                        id="productName"
                        name="productName"
                        value="상품 이름"
                        readonly
                      />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="form-group">
                      <label for="inquiry">문의 내용</label>
                      <textarea
                        id="inquiry"
                        name="inquiry"
                        rows="5"
                        placeholder="문의하실 내용을 작성해주세요"
                      ></textarea>
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <button type="submit" class="site-btn">문의 제출</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Contact Page Section End -->

    <!-- include : footer -->
    <%- include('includes/footer') %>
  </body>
</html>
