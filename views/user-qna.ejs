<!DOCTYPE html>
<html lang="ko">
  <!-- include : head -->
  <%- include('includes/head') %>
  <body>
    <!-- include : preloder -->
    <%- include('includes/preloder') %>

    <!-- include : header -->
    <%- include('includes/header') %>

    <!-- Contact Page Section Begin -->
    <section class="contact-page spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="contact__text">
              <h2>문의하기</h2>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4">
            <div class="contact__widget">
              <div class="contact__widget__title">
                <h5>상품 이미지</h5>
              </div>
              <img src="/img/product/product-image.jpg" alt="Product Image" />
            </div>
          </div>
          <div class="col-lg-8">
            <div class="contact__form">
              <form action="#">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <label for="productName">상품 이름</label>
                      <input
                        type="text"
                        id="productName"
                        name="productName"
                        value="상품 이름"
                        readonly
                      />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="form-group">
                      <label for="inquiry">문의 내용</label>
                      <textarea
                        id="inquiry"
                        name="inquiry"
                        rows="5"
                        placeholder="문의하실 내용을 작성해주세요"
                      ></textarea>
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <button type="button" class="site-btn cancel">
                      취소하기
                    </button>
                    <button type="button" class="site-btn submit">
                      등록하기
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Contact Page Section End -->
    <!-- JavaScript 처리 -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const cancelButton = document.querySelector('.site-btn.cancel');
        const submitButton = document.querySelector('.site-btn.submit');
        const inquiryTextarea = document.getElementById('inquiry');
        // 취소 버튼 클릭 시 이벤트 처리
        cancelButton.addEventListener('click', () => {
          if (confirm('작성을 취소하시겠습니까?')) {
            inquiryTextarea.value = ''; // 입력폼 초기화
          }
        });

        // 등록 버튼 클릭 시 이벤트 처리
        submitButton.addEventListener('click', () => {
          // 여기에서 서버로 질문 내용을 전송하고 처리하는 로직을 구현해야 합니다.
          const inquiryContent = inquiryTextarea.value;

          // 예시로 질문 내용을 콘솔에 출력하는 동작을 추가하였습니다.
          console.log('작성한 질문 내용:', inquiryContent);

          // 등록 완료 메세지 출력
          alert('질문 등록이 완료되었습니다.');
        });
      });
    </script>
    <!-- include : footer -->
    <%- include('includes/footer') %>
  </body>
</html>
