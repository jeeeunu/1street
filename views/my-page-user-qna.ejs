<!DOCTYPE html>
<html lang="ko">
  <!-- include : head -->
  <%- include('includes/head') %>
  <body>
    <!-- include : preloder -->
    <%- include('includes/preloder') %>

    <!-- include : header -->
    <%- include('includes/header') %>

    <!-- Qna Page Section Begin -->
    <section class="qna-page spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="qna__title">
              <h2>Q&A</h2>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="qna__table">
              <table>
                <thead>
                  <tr>
                    <th>작성일자</th>
                    <th>판매자</th>
                    <th>상품명</th>
                    <th>문의 내용</th>
                    <th>질문상태</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>2023-08-30</td>
                    <td>판매자 이름</td>
                    <td>상품 A</td>
                    <td>상품 A에 대한 질문 내용입니다.</td>
                    <td class="status-cell">답변완료</td>
                  </tr>
                  <tr>
                    <td>2023-08-29</td>
                    <td>다른 판매자</td>
                    <td>상품 B</td>
                    <td>상품 B에 대한 질문 내용입니다.</td>
                    <td class="status-cell">답변대기중</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Qna Page Section End -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const questionRows = document.querySelectorAll('.qna__table tbody tr');
        // 각 질문에 대한 데이터 가져오기
        // .product-image, .product-name, .inquiry-content, .written-date, .seller-name 등의 클래스 이름은
        // my-page-user-qna.ejs 페이지에서 실제로 사용하는 클래스 이름과 일치해야 한다.
        questionRows.forEach((row) => {
          const productImage = row.querySelector('.product-image').textContent;
          const productName = row.querySelector('.product-name').textContent;
          const inquiryContent =
            row.querySelector('.inquiry-content').textContent;
          const writtenDate = row.querySelector('.written-date').textContent;
          const sellerName = row.querySelector('.seller-name').textContent;

          // 데이터를 해당 요소에 추가하여 화면에 표시
          const productImageCell = row.querySelector('.product-image-cell');
          const productNameCell = row.querySelector('.product-name-cell');
          const inquiryContentCell = row.querySelector('.inquiry-content-cell');
          const writtenDateCell = row.querySelector('.written-date-cell');
          const sellerNameCell = row.querySelector('.seller-name-cell');
          const statusCell = row.querySelector('.status-cell');

          productImageCell.textContent = productImage;
          productNameCell.textContent = productName;
          inquiryContentCell.textContent = inquiryContent;
          writtenDateCell.textContent = writtenDate;
          sellerNameCell.textContent = sellerName;

          // 질문상태 처리 (기본값: '답변대기중')
          statusCell.textContent = '답변대기중'; // 기본값 설정

          // 판매자가 답변 등록한 경우 동작 처리
          statusCell.textContent = '답변완료';
        });
      });
    </script>

    <!-- include : footer -->
    <%- include('includes/footer') %>
  </body>
</html>
