<!DOCTYPE html>
<html lang="ko">
  <!-- include : head -->
  <%- include('includes/head') %>
  <body>
    <!-- include : preloder -->
    <%- include('includes/preloder') %>

    <!-- include : header -->
    <%- include('includes/header') %>

    <!-- Qna Page Section Begin -->
    <section class="qna-page spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="qna__title">
              <h2>Q&A</h2>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="qna__table">
              <table>
                <thead>
                  <tr>
                    <th>작성일자</th>
                    <th>판매자</th>
                    <th>상품명</th>
                    <th>문의 내용</th>
                    <th>질문상태</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- 이 부분은 자바스크립트에서 동적으로 데이터를 추가할 곳입니다. -->
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Qna Page Section End -->
    <script>
      // 로그인한 사용자 정보를 저장한 객체 (가정)
      // 현재 로그인한 내 정보를 바탕으로 페이지를 불러오기에 성공했지만,
      // 익명의 누군가가 접속했을 때 해당 userId를 통해 QNA 정보를 확인하는 것으로 수정해야한다.
      const currentUser = {
        id: 3, // 사용자의 고유 ID
      };

      // 로그인한 사용자의 ID를 userId 변수에 저장
      const userId = currentUser.id;

      // userId를 사용하여 서버로 요청 보내는 예시
      document.addEventListener('DOMContentLoaded', async () => {
        try {
          // 서버에서 Q&A 데이터를 가져오는 요청을 보냅니다.
          const response = await fetch(`/qnas/user/${userId}`);

          if (response.ok) {
            // 서버 응답이 성공인 경우
            const qnaList = await response.json();

            // Q&A 데이터를 화면에 표시합니다.
            const tbody = document.querySelector('.qna__table tbody');

            // 이전의 예시 데이터를 삭제합니다.
            tbody.innerHTML = '';

            qnaList.forEach((qna) => {
              const row = document.createElement('tr');
              row.innerHTML = `
                <td>${qna.created_at}</td>
                <td>${qna.user.name}</td>
                <td>${qna.product.product_name}</td>
                <td>${qna.qna_content}</td>
                <td class="status-cell">${qna.status}</td>
              `;

              tbody.appendChild(row);
            });
          } else {
            // 서버 응답이 실패인 경우
            console.error(
              '서버 응답 오류:',
              response.status,
              response.statusText,
            );
            alert('데이터를 불러오는데 실패했습니다.');
          }
        } catch (error) {
          console.error('오류 발생:', error);
          alert('오류가 발생했습니다.');
        }
      });
    </script>

    <!-- include : footer -->
    <%- include('includes/footer') %>
  </body>
</html>
